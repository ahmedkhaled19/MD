<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation"
    card_view:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin"
        card_view:ignore="RtlHardcoded">

        <RelativeLayout
            android:id="@+id/round_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@drawable/round"
            android:backgroundTint="@color/gray_light"
            card_view:ignore="RtlHardcoded">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:id="@+id/tv_inside_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="@dimen/md_text_size_display_1_regular"
                card_view:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_recycler_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/round_view"
            android:layout_toRightOf="@id/round_view"
            android:text="@string/word"
            android:textColor="@color/black"
            card_view:ignore="RtlHardcoded" />

        <TextView

            android:id="@+id/tv_recycler_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recycler_item_1"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/round_view"
            android:layout_toRightOf="@id/round_view"
            android:text="@string/meaning"
            card_view:ignore="RtlHardcoded" />
    </RelativeLayout>
</android.support.v7.widget.CardView>