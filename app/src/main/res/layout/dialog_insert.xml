<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:hint="Word"
            android:id="@+id/ed_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="8dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_headline_regular" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

        <EditText
            android:hint="@string/meaning"
            android:id="@+id/ed_arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:inputType="text"
            android:lines="1"
            android:paddingRight="8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_size_large" />

        <EditText
            android:hint="@string/example"
            android:id="@+id/ed_meaning"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/text_margin"
            android:inputType="textImeMultiLine|textMultiLine"
            android:lines="3"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/material_text_size_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_dialog_bottom_sheet_ok"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="save"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btn_dialog_bottom_sheet_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_dialog_bottom_sheet_ok"
                android:text="discard"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>