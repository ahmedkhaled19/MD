<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tv_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:paddingLeft="8dp"
            android:text="nader"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_headline_regular" />
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speaker"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="right"
            android:paddingRight="8dp"
            android:text="نادر"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_size_large" />

        <TextView
            android:id="@+id/tv_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="left"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="nader is a man who work in android career akjhdljkBDLFHBsjdlc;HSBDC;KjndcjhsK;DJB;SKjvdnk;JSDN;KJSDV"
            android:textSize="@dimen/material_text_size_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_dialog_bottom_sheet_ok"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btn_dialog_bottom_sheet_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_dialog_bottom_sheet_ok"
                android:text="@string/delete"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btn_dialog_bottom_sheet_edit"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_dialog_bottom_sheet_delete"
                android:text="@string/edit"
                android:textColor="@color/colorAccent" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>